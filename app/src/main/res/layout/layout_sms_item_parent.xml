<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/parentItem_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:foreground="@color/primaryGreyLight_50_opac"
        card_view:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/parentItem_textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS-App"
                android:textColor="@color/secondaryButton"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/parentItem_textView_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/parentItem_textView_address"
                android:text="2"
                android:textColor="@color/primaryGreyLight"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/parentItem_textView_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parentItem_textView_address"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dp_5"
                android:text="@string/dummy_msg"
                android:textColor="@color/primaryGreyDark"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>